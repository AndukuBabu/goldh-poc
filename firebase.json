{
    "hosting": {
        "public": "dist/public",
        "ignore": [
            "firebase.json",
            "**/.*",
            "node_modules/**",
            "src/**",
            "server/**",
            "client/**"
        ],
        "rewrites": [
            {
                "source": "/api/**",
                "run": {
                    "serviceId": "api",
                    "region": "us-central1"
                }
            },
            {
                "source": "**",
                "destination": "/index.html"
            }
        ]
    },
    "functions": [
        {
            "source": ".",
            "codebase": "default",
            "ignore": [
                "node_modules",
                ".git",
                "client",
                "server",
                "scripts",
                "attached_assets",
                "docs",
                "firebase-debug.log"
            ],
            "runtime": "nodejs20"
        }
    ]
}