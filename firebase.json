{
    "hosting": {
        "public": "dist/public",
        "ignore": [
            "firebase.json",
            "**/.*",
            "node_modules/**",
            "src/**",
            "server/**",
            "client/**"
        ],
        "rewrites": [
            {
                "source": "/api/**",
                "run": {
                    "serviceId": "api",
                    "region": "us-central1"
                }
            },
            {
                "source": "**",
                "destination": "/index.html"
            }
        ]
    },
    "functions": [
        {
            "source": ".",
            "codebase": "default",
            "ignore": [
                "node_modules",
                ".git",
                "client",
                "server",
                "scripts",
                "attached_assets",
                "docs",
                "QA",
                "firebase-debug.log"
            ],
            "runtime": "nodejs22"
        },
        {
            "source": "functions",
            "codebase": "schedulers",
            "ignore": [
                "node_modules",
                ".git"
            ],
            "runtime": "nodejs22"
        }
    ],
    "emulators": {
        "auth": {
            "port": 9099
        },
        "functions": {
            "port": 5001
        },
        "firestore": {
            "port": 8080
        },
        "hosting": {
            "port": 5000
        },
        "pubsub": {
            "port": 8085
        },
        "ui": {
            "enabled": true
        }
    }
}