# GoldenHorizon (GOLDH) Environment Variables Template
# Copy this file to .env and fill in the values.
# 
# NOTE: For local development, use the "Standard Names" below.
# For Firebase Cloud deployment, these same values must be set as secrets
# using the 'GH_' prefixes (see README or walkthrough for commands).

# ==============================================================================
# DATABASE & INFRASTRUCTURE
# ==============================================================================
# Neon / PostgreSQL connection string
DATABASE_URL=postgres://user:password@host:port/dbname?sslmode=require
# Encryption secret for user sessions
SESSION_SECRET=a_long_random_string_here

# ==============================================================================
# FIREBASE ADMIN (For Local DB Access)
# ==============================================================================
FB_PROJECT_ID=goldh-poc
FB_CLIENT_EMAIL=firebase-adminsdk-xxxxx@goldh-poc.iam.gserviceaccount.com
FB_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n"

# ==============================================================================
# EXTERNAL INTEGRATIONS
# ==============================================================================
# Zoho CRM integration
ZOHO_CLIENT_ID=xxxxxxxxxxxxxx
ZOHO_CLIENT_SECRET=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
ZOHO_REFRESH_TOKEN=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
ZOHO_API_DOMAIN=https://www.zohoapis.com

# API KEYS
COINGECKO_API_KEY=CG-xxxxxxxxxxxxxx
FINNHUB_API_KEY=xxxxxxxxxxxxxx
HUGGINGFACE_API_KEY=hf_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# ==============================================================================
# APP SCHEDULER PARAMETERS (Safe to keep in .env for deployment)
# ==============================================================================
# 1 = Enabled, 0 = Disabled
UMF_SCHEDULER=1
GURU_SCHEDULER=1

# Comma-separated list of emails that should be auto-granted admin rights
ADMIN_EMAILS=user1@example.com,user2@example.com

# ==============================================================================
# SERVER CONFIGURATION
# ==============================================================================
NODE_ENV=performance
GH_PORT=5000

# ==============================================================================
# FRONTEND CONFIGURATION (Vite)
# ==============================================================================
# These will be baked into the client build. Prefix with VITE_
VITE_FIREBASE_API_KEY=AIzaSyCjEmAnHmKLZ8msjNeovJBF3ssg-OHzz0M
VITE_FIREBASE_AUTH_DOMAIN=goldh-poc.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=goldh-poc
VITE_FIREBASE_STORAGE_BUCKET=goldh-poc.firebasestorage.app
VITE_FIREBASE_MESSAGING_SENDER_ID=1050639201481
VITE_FIREBASE_APP_ID=1:1050639201481:web:71c433ebb31ccb2e6b4918
