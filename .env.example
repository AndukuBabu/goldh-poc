# GoldenHorizon (GOLDH) Environment Variables Template
# Copy this file to .env and fill in the values

# ==============================================================================
# DATABASE SECRETS
# ==============================================================================
# Neon / PostgreSQL connection string
DATABASE_URL=postgres://user:password@host:port/dbname?sslmode=require

# Firebase Admin SDK (for server-side Firestore operations)
# Either provide a path to a service account JSON file
GOOGLE_APPLICATION_CREDENTIALS=./firebase-key.json
# OR provide individual values for standardized hosting (Render/Railway)
FIREBASE_PROJECT_ID=goldh-c78ca
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@goldh-c78ca.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n"

# Zoho CRM integration
ZOHO_CLIENT_ID=xxxxxxxxxxxxxx
ZOHO_CLIENT_SECRET=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
ZOHO_REFRESH_TOKEN=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
ZOHO_API_DOMAIN=https://www.zohoapis.com

# ==============================================================================
# API KEYS
# ==============================================================================
# CoinGecko API Key (Demo tier)
COINGECKO_API_KEY=CG-xxxxxxxxxxxxxx

# ==============================================================================
# APP SCHEDULER PARAMETERS
# ==============================================================================
# 1 = Enabled, 0 = Disabled
UMF_SCHEDULER=1
GURU_SCHEDULER=1

# Comma-separated list of emails that should be auto-granted admin rights
ADMIN_EMAILS=user1@example.com,user2@example.com

# ==============================================================================
# SERVER CONFIGURATION
# ==============================================================================
NODE_ENV=development
PORT=5000
SESSION_SECRET=a_long_random_string_here

